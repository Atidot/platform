FROM ubuntu:latest
RUN apt-get update
RUN apt-get -y install sudo
RUN sudo apt-get -y install \
    python3                 \
    python3-pip             
RUN pip3 install \
    pika         
RUN adduser atidot
USER atidot
WORKDIR /home/atidot
ENV PATH /home/atidot/.local/bin:${PATH}
COPY --chown=atidot python/ /home/atidot/
COPY --chown=atidot bin/ /home/atidot/.local/bin/
CMD ["platform-harness","--entrypoint","python3","--entrypointArgs","consumer.py"]
