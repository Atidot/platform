name:                platform-dsl
version:             0.1.0.0
synopsis:            Platform DSL
-- description:
homepage:            github.com/atidot/platform
-- bug-reports:
license:             BSD-3-Clause
license-file:        LICENSE
author:              Atidot
maintainer:          devops@atidot.com
-- copyright:
category:            Other
extra-source-files:  CHANGELOG.md

library
  exposed-modules:    Platform.DSL
  -- other-modules:
  -- other-extensions:
  build-depends:       base
                     , lens
                     , aeson
                     , data-default
                     , text
                     , free
                     , platform-types
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite platform-dsl-test
  type:             exitcode-stdio-1.0
  hs-source-dirs:   test
  main-is:          Spec.hs
  build-depends:    base
                  , hspec
                  , platform-types
                  , platform-dsl
  ghc-options:      -Wall
  default-language: Haskell2010

executable platform-dsl
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       base
                     , bytestring
                     , aeson
                     , optparse-applicative
                     , platform-types
                     , platform-dsl
  hs-source-dirs:      app
  default-language:    Haskell2010
