name:                platform-harness
version:             0.1.0.0
synopsis:            Platform Harness
-- description:
homepage:            github.com/atidot/platform
-- bug-reports:
license:             BSD-3-Clause
license-file:        LICENSE
author:              Atidot
maintainer:          devops@atidot.com
-- copyright:
category:            Other
extra-source-files:  CHANGELOG.md

library
  exposed-modules:    Platform.Harness
                      Platform.Harness.DSL
                      Platform.Harness.Types
  -- other-modules:
  -- other-extensions:
  build-depends:       base
                     , lens
                     , aeson
                     , extra
                     , mtl
                     , exceptions
                     , turtle
                     , data-default
                     , text
                     , transformers
                     , free
                     , platform-types
                     , platform-dsl
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite platform-harness-test
  type:             exitcode-stdio-1.0
  hs-source-dirs:   test
  main-is:          Spec.hs
  build-depends:    base
                  , hspec
                  , platform-types
                  , platform-dsl
                  , platform-harness
  ghc-options:      -Wall
  default-language: Haskell2010

executable platform-harness
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       base
                     , bytestring
                     , data-default
                     , directory
                     , exceptions
                     , extra
                     , aeson
                     , system-filepath
                     , mtl
                     , shelly
                     , text
                     , optparse-generic
                     , platform-types
                     , platform-dsl
                     , platform-harness
  hs-source-dirs:      app
  default-language:    Haskell2010
